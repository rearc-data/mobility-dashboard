COMPONENT APIService service

ROUTE -m GET /api/*

RESOURCE ApplicationDatabase dynamodb

FROM node:14-alpine
WORKDIR server

ENV NODE_ENV production
COPY package*.json ./
RUN npm ci

ENV NODE_ENV production
ENV DYNAMO_TABLE $.resources.ApplicationDatabase.tableName
ENV DYNAMO_ENDPOINT $.resources.ApplicationDatabase.endpoint

COPY server.js .
COPY /routes ./routes

CMD npm start
