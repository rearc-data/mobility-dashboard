COMPONENT SeedingTask task

RESOURCE ApplicationDatabase dynamodb -s hashKeyName=name -s hashKeyType=S -s rangeKeyName=type -s rangeKeyType=S

FROM node:14-alpine
WORKDIR seed_task

ENV NODE_ENV production

COPY package*.json ./
RUN npm ci

ENV NODE_ENV production
ENV DYNAMO_TABLE $.resources.ApplicationDatabase.tableName
ENV DYNAMO_ENDPOINT $.resources.ApplicationDatabase.endpoint

COPY index.js .
CMD npm start

LIFECYCLE beforeTraffic
